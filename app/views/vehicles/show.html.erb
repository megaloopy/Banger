<h1><%= @vehicle.owner_name %>'s <%= @vehicle.nick_name %></h1>
<%= link_to image_tag(@vehicle.image), vehicle_services_path(@vehicle) %>
<p>
   <%= @vehicle.year %> &ndash; <%= @vehicle.make %>, <%= @vehicle.model %>
   <%= @vehicle.original_odometer %>
</p>
<% if @vehicle.user_id == current_user.id %>
   <p>
      <%= link_to "Back", root_path %> | 
      <%= link_to "Edit", edit_vehicle_path(@vehicle) %> | 
      <%= link_to "Delete", vehicle_path(@vehicle), method: :delete, data: {confirm: "Are you sure?"} %>
   </p>
<% end %>